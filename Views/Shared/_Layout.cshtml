            <ul class="side-nav" id="mobile-demo">
                <li><a class="active" asp-controller="Student" asp-action="Index">Students</a></li>
                <li><a asp-controller="Class" asp-action="Index">Classes</a></li>
                <li><a asp-controller="Branch" asp-action="Index">Branches</a></li>
