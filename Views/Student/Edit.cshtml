@model Student

@{
    ViewBag.Title = "Edit";
}

@section Scripts {
    <script src="~/js/student/student.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<div class="row">

    <div class="section">

        <!-- Student image -->
        <div class="col s12 m4">
            <div class="col s8 m8 l6 offset-s2 offset-m2 offset-l3">
                <img class="circle responsive-img" src="~/images/students/student256.png" />
            </div>
        </div>

        <!-- Student personal data -->
        <form asp-action="Edit" method="post" class="col s12 m8">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="input-field col s12">
                    <input asp-for="FiscalCode" class="validate" id="fiscal_code" type="text">
                    <span class="accent-1" asp-validation-for="FiscalCode"></span>
                    <label asp-for="FiscalCode" class="active">Fiscal Code</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <input asp-for="Name" id="first_name" type="text" class="validate">
                    <label asp-for="Name" class="active">First Name</label>
                </div>
                <div class="input-field col s6">
                    <input asp-for="Surname" id="last_name" type="text" class="validate">
                    <label asp-for="Surname" class="active">Last Name</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">email</i>
                    <input asp-for="Email" id="email" class="validate">
                    <label asp-for="Email" for="email" data-error="wrong" data-success="right">Email</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">today</i>
                    <input asp-for="Birthday" type="date" class="datepicker">
                    <label asp-for="Birthday" for="birthday" class="active">Birthday</label>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <input asp-for="Age" id="age" type="text" class="validate">
                        <label asp-for="Age" class="active">Age</label>
                    </div>
                </div>
            </div>

            <div class="input-field col s12">
                <select asp-for="FkClass" asp-items="ViewBag.FkClass">
                    <option value="" disabled selected>Choose your option</option>
                </select>
                <label asp-for="FkClass">Classe</label>
            </div>

            <div class="row">

                <div class="col s12 m4">
                    <button class="btn waves-effect waves-light col s12" type="submit">
                        Save
                        <i class="material-icons right">send</i>
                    </button>
                </div> 
                <div class="col s12 m4">
                    <button class="btn waves-effect waves-light col s12" asp-action="Index">
                        Back
                        <i class="material-icons right">send</i>
                    </button>
                </div> 
                <div class="col s12 m4">
                    <button class="btn waves-effect waves-light col s12" asp-action="Delete" asp-route-id="@Model.FiscalCode">
                        Delete
                        <i class="material-icons right">send</i>
                    </button>
                </div>  
                
            </div>

        </form>

    </div>
</div>

