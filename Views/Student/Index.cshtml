@model IEnumerable<Student>

@{
    ViewBag.Title = "Students";
}

<!-- Section that renders after jQuery plugin-->
@section Scripts {
    <script src="~/js/student/student.js"></script>
}

<!-- Tables with students -->
<div id="students" class="col s12">

    <div class="row">

        <div class="col s12 m4 l2">
            <div class="card">
                <a asp-action="Create" class="col s12 btn-block teal btn-large waves-effect waves-light red hoverable"><i class="material-icons">add</i></a>
            </div>
        </div>

        @foreach (var student in Model)
        {
            <div class="col s12 m4 l2">

                <div class="student-card">
                    <div class="card teal darken-3">
                        <div class="card-image">
                            <img src="~/images/students/student256.png" />
                        </div>
                        <ul class="card-buttons">
                            <li>
                                <a asp-action="Edit" asp-route-id="@student.ID" class="btn-floating waves-effect waves-light teal hoverable"><i class="material-icons">mode_edit</i></a>
                            </li>
                            <li>
                                <a asp-action="Details" asp-route-id="@student.ID" class="btn-floating waves-effect waves-light teal hoverable"><i class="material-icons">info_outline</i></a>
                            </li>
                            <li>
                                <a href="#delete-student-@student.ID" class="btn-floating waves-effect waves-light red daken-1 hoverable"><i class="material-icons right">delete</i></a>
                            </li>
                        </ul>
                        <div class="card-content white">
                            <h6 class="card-title teal-text">@student.Name @student.Surname</h6>
                        </div>
                    </div>
                </div>

                <!-- Modal Structure -->
                @Html.Partial("Delete", student)

            </div>
        }



    </div>

</div>

<div id="classes" class="col s12">Classes</div>
<div id="specializations" class="col s12">Specializations</div>
